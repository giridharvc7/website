---
const year = new Date().getFullYear();
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<footer>
  <div class="footer-inner">
    <div class="footer-links">
      <a href="https://twitter.com/giridharvc7" target="_blank" rel="noopener">Twitter</a>
      <a href="https://github.com/giridharvc7" target="_blank" rel="noopener">GitHub</a>
      <a href="https://linkedin.com/in/giridharvc7" target="_blank" rel="noopener">LinkedIn</a>
      <a href="mailto:giridhar06@gmail.com">Email</a>
      <a href={`${base}/rss.xml`}>RSS</a>
    </div>
    <p class="copyright">&copy; {year} Giridhar</p>
  </div>
</footer>

<style>
  footer {
    border-top: none;
    padding: 2rem 1.5rem 1.5rem;
  }

  .footer-inner {
    max-width: var(--content-width);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8rem;
  }

  .footer-links {
    display: flex;
    gap: 1rem;
  }

  a {
    color: var(--color-muted);
  }

  .copyright {
    color: var(--color-border);
    font-size: 0.7rem;
    margin: 0;
  }
</style>
