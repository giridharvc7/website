---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const isDev = import.meta.env.DEV;
  const posts = await getCollection('writing', (post) => isDev || !post.data.draft);
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const wordCount = post.body?.trim().split(/\s+/).length ?? 0;
const readingTime = Math.ceil(wordCount / 200);
---

<Layout title={`${post.data.title} — Giridhar`} description={post.data.description}>
  <article>
    {post.data.draft && <p class="draft-banner">Draft — this post is only visible in dev mode</p>}
    <header>
      <h1>{post.data.title}</h1>
      <p class="muted small">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <span class="sep">·</span>
        <span>{readingTime} min read</span>
      </p>
    </header>
    <Content />
  </article>
</Layout>

<style>
  .draft-banner {
    background: #d97706;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  header {
    margin-bottom: 2rem;
  }

  header h1 {
    margin-bottom: 0.5rem;
  }

  .sep {
    margin: 0 0.3rem;
  }

  article :global(img:not(.fw-logo)) {
    max-width: 100%;
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem auto;
    display: block;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  }

  article :global(p:has(> img)) {
    margin: 0;
  }

  article :global(.photo-grid) {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 6px;
    margin: 1.5rem 0;
  }

  article :global(.photo-grid img) {
    width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 0;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  }

  /* For 5 photos: last image spans full width */
  article :global(.photo-grid img:last-child:nth-child(odd)) {
    grid-column: 1 / -1;
  }
</style>
