---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const isDev = import.meta.env.DEV;
  const posts = await getCollection('writing', (post) => isDev || !post.data.draft);
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const wordCount = post.body?.trim().split(/\s+/).length ?? 0;
const readingTime = Math.ceil(wordCount / 200);
---

<Layout title={`${post.data.title} — Giridhar`} description={post.data.description}>
  <article>
    {post.data.draft && <p class="draft-banner">Draft — this post is only visible in dev mode</p>}
    <header>
      <h1>{post.data.title}</h1>
      <p class="muted small">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <span class="sep">·</span>
        <span>{readingTime} min read</span>
      </p>
    </header>
    <Content />
  </article>
</Layout>

<style>
  .draft-banner {
    background: #d97706;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  header {
    margin-bottom: 2rem;
  }

  header h1 {
    margin-bottom: 0.5rem;
  }

  .sep {
    margin: 0 0.3rem;
  }

  article :global(img:not(.fw-logo)) {
    max-width: 100%;
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem auto;
    display: block;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  }

  article :global(p:has(> img)) {
    margin: 0;
  }

  article :global(figure) {
    margin: 1.5rem 0;
  }

  article :global(figure img) {
    margin: 0 !important;
  }

  article :global(figcaption) {
    text-align: center;
    font-size: 0.82rem;
    color: var(--color-muted, #888);
    margin-top: 0.5rem;
    font-style: italic;
  }

  article :global(.photo-grid) {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 6px;
    margin: 1.5rem 0;
  }

  article :global(.photo-grid img) {
    width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 0;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  }

  /* For 5 photos: last image spans full width */
  article :global(.photo-grid img:last-child:nth-child(odd)) {
    grid-column: 1 / -1;
  }

  /* Lightbox — :global() because the element is injected dynamically by JS */
  :global(#lightbox) {
    display: flex;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.88);
    z-index: 1000;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease-in;
  }

  :global(#lightbox.open) {
    opacity: 1;
    pointer-events: auto;
  }

  :global(#lightbox-img) {
    max-width: 92vw;
    max-height: 92vh;
    object-fit: contain;
    border-radius: 6px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.5);
    transform: scale(0.95);
    transition: transform 0.25s ease-in;
  }

  :global(#lightbox.open #lightbox-img) {
    transform: scale(1);
  }

  :global(#lightbox-close) {
    position: fixed;
    top: 1rem;
    right: 1.2rem;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.8);
    font-size: 2rem;
    line-height: 1;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
  }

  :global(#lightbox-close:hover) {
    color: #fff;
  }
</style>

<script>
  function initLightbox() {
    // Create lightbox once, reuse across navigations
    if (!document.getElementById('lightbox')) {
      const lb = document.createElement('div');
      lb.id = 'lightbox';
      lb.setAttribute('aria-modal', 'true');
      lb.setAttribute('role', 'dialog');
      lb.innerHTML = '<button id="lightbox-close" aria-label="Close">&times;</button><img id="lightbox-img" src="" alt="" />';
      document.body.appendChild(lb);

      lb.addEventListener('click', (e) => { if (e.target === lb) closeLightbox(); });
      document.getElementById('lightbox-close').addEventListener('click', closeLightbox);
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeLightbox(); });
    }

    // Attach to article images not yet initialized
    document.querySelectorAll('article img:not(.fw-logo):not([data-lightbox])').forEach((img) => {
      img.dataset.lightbox = '1';
      img.style.cursor = 'zoom-in';
      img.addEventListener('click', () => {
        const lbImg = document.getElementById('lightbox-img');
        lbImg.src = img.src;
        lbImg.alt = img.alt;
        document.getElementById('lightbox').classList.add('open');
        document.body.style.overflow = 'hidden';
      });
    });
  }

  function closeLightbox() {
    document.getElementById('lightbox')?.classList.remove('open');
    document.body.style.overflow = '';
  }

  document.addEventListener('astro:page-load', initLightbox);
</script>
