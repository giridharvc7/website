---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Giridhar's personal website â€” work, writing, travel, and photos.", ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <script is:inline>
      const t = localStorage.getItem('theme');
      if (t) document.documentElement.classList.add(t);
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="Writing" href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/rss.xml`} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet" />

    <slot name="head" />
    <ViewTransitions />
  </head>
  <body>
    <Nav transition:persist />
    <main>
      <slot />
    </main>
    <Footer />
    <script is:inline>
      (function() {
        function applySavedTheme() {
          const t = localStorage.getItem('theme');
          const html = document.documentElement;
          html.classList.remove('dark', 'light');
          if (t === 'dark' || t === 'light') {
            html.classList.add(t);
          }
        }

        function toggleTheme() {
          const html = document.documentElement;
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const isDark = html.classList.contains('dark') ||
            (!html.classList.contains('light') && prefersDark);
          const next = isDark ? 'light' : 'dark';
          html.classList.remove('dark', 'light');
          html.classList.add(next);
          localStorage.setItem('theme', next);
        }

        // Initial sync for full page loads
        applySavedTheme();

        // Re-apply theme after Astro view transitions replace <html> attributes
        document.addEventListener('astro:page-load', applySavedTheme);

        // Event delegation so the handler survives nav swaps
        document.addEventListener('click', (e) => {
          const target = e.target;
          if (!(target instanceof Element)) return;
          const button = target.closest('#theme-toggle');
          if (!button) return;
          e.preventDefault();
          toggleTheme();
        });
      })();
    </script>
  </body>
</html>
